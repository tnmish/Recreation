@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<Recreation.Data.Entities.ItemType>

<div id="map">
</div>

<div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
    <div class="offcanvas-header">
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#park" type="button" role="tab" aria-controls="park" aria-selected="true" onclick="setParkOptions()">
                    Парк
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#bikeLane" type="button" role="tab" aria-controls="bikeLane" aria-selected="false" onclick="setBikeLaneOptions()">
                    Велодорожка
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#recreationArea" type="button" role="tab" aria-controls="recreationArea" aria-selected="false" onclick="setRecreationAreaOptions()">
                    Зона отдыха
                </button>
            </li>
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="park" role="tabpanel" aria-labelledby="home-tab">
                @await Html.PartialAsync("AddPark", ViewData)
            </div>
            <div class="tab-pane fade" id="bikeLane" role="tabpanel" aria-labelledby="profile-tab">
                @await Html.PartialAsync("AddBikeLane", ViewData)
            </div>
            <div class="tab-pane fade" id="recreationArea" role="tabpanel" aria-labelledby="contact-tab">
                @await Html.PartialAsync("AddRecreationArea")
            </div>
        </div>
    </div>
</div>

<style>
    #map {
        position: absolute;
        width: 100vw;
        height: 100vh;
        top: 0;
        left: 0;
    }
</style>

<!--секция скриптов-->
@section Scripts {
    <script src="~/js/index.js" asp-append-version="true"></script>
}
